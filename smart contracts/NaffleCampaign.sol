struct Campaign {
    uint256 campaignId;
    uint256 totalTickets;
    uint256 ticketPrice;
    uint256 startTime;
    uint256 endTime;
    uint256[] tickets;

    address creator;
    address winner;

    address nftAddress;
    uint256 nftTokenId;

    IERC721 nftItem;

    uint256 price;
    mapping (uint256 => address) ticketIdToBuyer;
    uint256 currentTicketCountForCache;
}

struct NFTInfo {
    uint256 campaignId;
    address nftAddress;
    uint256 nftTokenId;
    uint256 price;
    uint256 ticketPrice;
}

contract Raffle {
    using SafeMath for uint256;
    ITicketNFT ticketNFT;

    mapping (address => uint256[]) public ownerToTickets;
    mapping (address => address) public nftAddressToOwner;
    mapping (address => address) public ownerAddressToNft;
    mapping (address => address[]) public ownerToNftAddresses;
    mapping (address => mapping (uint256 => Campaign)) public creatorToCampaign;
    // mapping (address => Campaign[]) public creatorToCampaign;
    mapping (uint256 => uint256) public ticketIdToBuyTime;
    mapping (address => uint256) public buyerToTicketId;

    mapping (address => uint256) public creatorToCampaignSize;
    mapping (address => mapping (uint256 => Campaign)) public campaignCache;

    uint256 private maxBuyAmount = 9000;
    uint256 private maxTicketNumber = 10000;
    uint256 private minTicketNumber = 2;

    uint256 public _balance = address(this).balance;
    uint256 public platformFee = 5;
    uint256 public penaltyFee = 10;
    uint256 public maxTicketAmount = 100;

    bool private isWhiteListMode = false;
    mapping (address => bool) private whiteList;
    mapping (address => mapping (uint256 => bool)) private nftAddressToTokenId;
    address private admin;

    NFTInfo[] NFTInfos;

    constructor (address _ticketAddress) {
        admin = msg.sender;
        ticketNFT = ITicketNFT(_ticketAddress);
    }

    /*_______________________________________Modifiers______________________________________*/

    modifier onlyAdmin {
        require(msg.sender == admin, "Access denied. Only admin.");
        _;
    }

    modifier whitelistManager(address _address) {
        require(isWhiteListMode == false || whiteList[_address] == true, "You are not in whitelist.");
        _;
    }

    modifier checkingExistCampaign(address _creator, uint256 _campaignIndex) {
        require(creatorToCampaign[_creator][_campaignIndex].creator != address(0), "Can't find the campaign.");
        _;
    }

    /*_______________________________________Campaign Operation______________________________________*/

    function createCampaign (address _nftAddress, uint256 _nftTokenId, uint256 _totalTickets, uint256 _price, uint256 _ticketPrice, uint256 _endTime) public {
        require(block.timestamp < _endTime, "Incorrect campaign time.");
        require(_totalTickets >= minTicketNumber && _totalTickets <= maxTicketNumber, "Incorrect number of ticket.");
        require(nftAddressToTokenId[_nftAddress][_nftTokenId] == false, "This NFT is already ordered.");

        address _creator = msg.sender;
        uint256 _campaignIndex = getLastCampaignIndex(_creator);

        nftAddressToTokenId[_nftAddress][_nftTokenId] = true;

        creatorToCampaign[_creator][_campaignIndex].campaignId = _campaignIndex;
        creatorToCampaign[_creator][_campaignIndex].totalTickets = _totalTickets;
        creatorToCampaign[_creator][_campaignIndex].price = _price;
        creatorToCampaign[_creator][_campaignIndex].ticketPrice = _ticketPrice;
        creatorToCampaign[_creator][_campaignIndex].startTime = block.timestamp;
        creatorToCampaign[_creator][_campaignIndex].endTime = _endTime;
        creatorToCampaign[_creator][_campaignIndex].creator = _creator;
        creatorToCampaign[_creator][_campaignIndex].nftAddress = _nftAddress;
        creatorToCampaign[_creator][_campaignIndex].nftTokenId = _nftTokenId;

        creatorToCampaign[_creator][_campaignIndex].nftItem = IERC721(_nftAddress);

        creatorToCampaignSize[_creator] = creatorToCampaignSize[_creator].add(1);

        addNftToList(_campaignIndex, _nftAddress, _nftTokenId, _price, _ticketPrice);
        createCampaignCache(_campaignIndex, _nftAddress, _nftTokenId, _totalTickets, _price, _ticketPrice, _endTime);
    }

    function createCampaignCache (uint256 _campaignId, address _nftAddress, uint256 _nftTokenId, uint256 _totalTickets, uint256 _price, uint256 _ticketPrice, uint256 _endTime) public {
        campaignCache[_nftAddress][_nftTokenId].campaignId = _campaignId;
        campaignCache[_nftAddress][_nftTokenId].totalTickets = _totalTickets;
        campaignCache[_nftAddress][_nftTokenId].price = _price;
        campaignCache[_nftAddress][_nftTokenId].ticketPrice = _ticketPrice;
        campaignCache[_nftAddress][_nftTokenId].startTime = block.timestamp;
        campaignCache[_nftAddress][_nftTokenId].endTime = _endTime;
    }

    function cancelCampaign (uint256 _campaignIndex) public returns(uint256){
        address _creator = msg.sender;

        require(creatorToCampaign[_creator][_campaignIndex].creator != address(0), "Can't find the campaign.");

        uint256 _returnValue;
        uint256 _ticketPrice = creatorToCampaign[_creator][_campaignIndex].ticketPrice;
        uint256 _currentTickets = creatorToCampaign[_creator][_campaignIndex].tickets.length;
        if(_currentTickets > 0) {
            uint256 _totalPrice = _ticketPrice.mul(_currentTickets);
            uint256 _entirePenalty = calculatePercentage(_totalPrice, penaltyFee);
            uint256 _penaltyToPlatform = calculatePercentage(_entirePenalty, platformFee);
            uint256 _penaltyToBuyers = _entirePenalty.sub(_penaltyToPlatform);
            uint256 _penaltyToPerBuyer = _penaltyToBuyers.div(_currentTickets);
            sendIncomeToCreater(_creator, _totalPrice.sub(_entirePenalty));
            for(uint256 i = 0; i < _currentTickets; i++) {
                uint256 _ticketId = creatorToCampaign[_creator][_campaignIndex].tickets[i];
                address _buyer = creatorToCampaign[_creator][_campaignIndex].ticketIdToBuyer[_ticketId];
                (bool sent,) = _buyer.call{value: _penaltyToPerBuyer}("");
                require(sent, "Faild sending ETH to buyer.");
            }
            closeCampaign(_creator, _campaignIndex);
            _returnValue = 0;
        }
        else {
            closeCampaign(_creator, _campaignIndex);
            _returnValue = 1;
        }
        return _returnValue;
    }

    function closeCampaign (address _creator, uint256 _campaignIndex) public checkingExistCampaign(_creator, _campaignIndex){
        address _nftAddress = creatorToCampaign[_creator][_campaignIndex].nftAddress;
        uint256 _nftTokenId = creatorToCampaign[_creator][_campaignIndex].nftTokenId;

        nftAddressToTokenId[_nftAddress][_nftTokenId] = false;
        creatorToCampaignSize[_creator].sub(1);
        
        removeIndexedNftFromArray(_nftAddress, _nftTokenId);

        delete campaignCache[_nftAddress][_nftTokenId];
        delete nftAddressToTokenId[_nftAddress][_nftTokenId];
        delete creatorToCampaign[_creator][_campaignIndex];
    }

    function changeTermOfCampaign (address _creator, uint256 _campaignIndex, uint256 _additionTime) public checkingExistCampaign(_creator, _campaignIndex){
        creatorToCampaign[_creator][_campaignIndex].endTime = creatorToCampaign[_creator][_campaignIndex].endTime.add(_additionTime);
    }

    function sendIncomeToCreater(address _creator, uint256 _income) public {
        (bool sent,) = _creator.call{value: _income}("");
        require(sent, "Can't sent income to creator.");
    }

    function addNftToList(uint256 _campaignIndex, address _address, uint256 _id, uint256 _price, uint256 _ticketPrice) public {
        NFTInfos.push(NFTInfo(_campaignIndex, _address, _id, _price, _ticketPrice));
    }

    /*_______________________________________Ticket Operation______________________________________*/


    function buyTicket (address _creator, uint256 _campaignIndex, string memory _ticketAvatarURI, uint256 _ticketAmount) public payable checkingExistCampaign(_creator, _campaignIndex){
        require(_creator != msg.sender, "This item is ordered by you. Error.");
        require(creatorToCampaign[_creator][_campaignIndex].tickets.length <= creatorToCampaign[_creator][_campaignIndex].totalTickets, "The number of ticket is over the max value.");
        require(creatorToCampaign[_creator][_campaignIndex].endTime >= block.timestamp, "Campaign timeout.");
        // require(creatorToCampaign[_creator][_campaignIndex].ticketPrice <= msg.value, "Invalid ticket price.");
        require(_ticketAmount <= maxTicketAmount, "Too many tickets");

        for(uint256 i = 0; i < _ticketAmount; i++) {
            uint256 ticketTokenId = ticketNFT.customMint(msg.sender, _ticketAvatarURI, "xxx");
            creatorToCampaign[_creator][_campaignIndex].tickets.push(ticketTokenId);
            creatorToCampaign[_creator][_campaignIndex].ticketIdToBuyer[ticketTokenId] = msg.sender;
        }
        address _nftAddress = creatorToCampaign[_creator][_campaignIndex].nftAddress;
        uint256 _nftTokenId = creatorToCampaign[_creator][_campaignIndex].nftTokenId;
        campaignCache[_nftAddress][_nftTokenId].currentTicketCountForCache = campaignCache[_nftAddress][_nftTokenId].currentTicketCountForCache.add(_ticketAmount);
    }

    /*_______________________________________Final Processing______________________________________*/



    function chooseWinnerAndSell (address _creator, uint256 _campaignIndex) public returns(address, bool){

        // require(creatorToCampaign[_creator][_campaignIndex].endTime < block.timestamp, "It's not time to draw yet.");
        
        uint256 _successedTicket = randomTicketId(_creator, _campaignIndex);
        address _winner = creatorToCampaign[_creator][_campaignIndex].ticketIdToBuyer[_successedTicket];
        uint256 _nftTokenId = creatorToCampaign[_creator][_campaignIndex].nftTokenId;

        uint256 _currentTickets = creatorToCampaign[_creator][_campaignIndex].tickets.length;
        uint256 _ticketPrice = creatorToCampaign[_creator][_campaignIndex].ticketPrice;
        uint256 _totalPrice = _ticketPrice.mul(_currentTickets);
        uint256 _platformFee = calculatePercentage(_totalPrice, platformFee);
        uint256 _totalIncome = _totalPrice.sub(_platformFee);

        creatorToCampaign[_creator][_campaignIndex].winner = _winner;

        creatorToCampaign[_creator][_campaignIndex].nftItem.transferFrom(_creator, _winner, _nftTokenId);
        // creatorToCampaign[_creator][_campaignIndex].nftItem.transfer(_winner, _nftTokenId);

        (bool sent,) = _creator.call{value: _totalIncome}("");

        // address _winner = creatorToCampaign[_creator].winner;

        // creatorToCampaign[_creator].nftItem.transferFrom(_creator, _winner, _nftTokenId);
        closeCampaign(_creator, _campaignIndex);
        // return (_winner, sent);
        return (_winner, sent);
    }

    function returnNFT(address _creator, uint256 _campaignIndex) public view returns(uint256){
        uint256 _nftTokenId = creatorToCampaign[_creator][_campaignIndex].nftTokenId;
        return _nftTokenId;
        // creatorToCampaign[_creator][_campaignIndex].nftItem.transfer(_creator, _nftTokenId);
    }

    function finalProcess(uint256 _campaignIndex) public returns(uint256) {
        address _creator = msg.sender;
        uint256 _returnValue;
        uint256 _endTime = creatorToCampaign[_creator][_campaignIndex].endTime;
        uint256 _totalTickets = creatorToCampaign[_creator][_campaignIndex].totalTickets;
        uint256 _currentTickets = creatorToCampaign[_creator][_campaignIndex].tickets.length;

        require(_endTime <= block.timestamp, "Campaign is running yet.");

        if(_endTime <= block.timestamp) {
            if(_totalTickets == _currentTickets) {
                chooseWinnerAndSell(_creator, _campaignIndex);
                _returnValue = 1;
            }
            else {
                _returnValue = 0;
            }
        }

        return _returnValue;
    }

